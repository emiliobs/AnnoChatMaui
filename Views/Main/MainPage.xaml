<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnnoChatMaui.Views.Main.MainPage"
             xmlns:home="clr-namespace:AnnoChatMaui.Views.Home"
             xmlns:chat="clr-namespace:AnnoChatMaui.Views.Chat"
             xmlns:setting="clr-namespace:AnnoChatMaui.Views.Account"
       >

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate home:HomePage}"></ShellContent>
        </Tab>
        <Tab Title="Chat">
            <ShellContent ContentTemplate="{DataTemplate chat:MessagePage}"></ShellContent>
        </Tab>
        <Tab Title="Setting">
            <ShellContent ContentTemplate="{DataTemplate setting:SettingsPage}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
